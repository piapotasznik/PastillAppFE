<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_height="50dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="16dp"

        app:cardCornerRadius="15dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/celesteItem">
<!--            #91AFBD-->
            <TextView
                android:id="@+id/timeLogsCalendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="1dp"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:letterSpacing="0.15"
                android:textColor="@color/grey"
                android:text="16:00 "
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--            <TextView-->
            <!--                android:id="@+id/calendarMedName"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="2"-->
            <!--                android:fontFamily="@font/francois_one"-->
            <!--                android:gravity="start|center"-->
            <!--                android:letterSpacing="0.15"-->
            <!--                android:text="Ibuprofeno"-->
            <!--                android:textSize="16sp"-->
            <!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/medLogsCalendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:fontFamily="@font/francois_one"
                android:gravity="start|center"
                android:text="@string/medicamento"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:letterSpacing="0.05"
                 />

            <ImageView
                android:id="@+id/takenLogsCalendarTrue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:src="@drawable/ic_checkbox_green"
                android:textSize="18sp"
                android:visibility="gone"


             />
            <ImageView
                android:id="@+id/takenLogsCalendarFalse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:src="@drawable/ic_red_cross"
                android:textSize="18sp"
                android:letterSpacing="0.05"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/presentationLogsCalendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:clickable="true"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:text="@string/presentacion"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:letterSpacing="0.05"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
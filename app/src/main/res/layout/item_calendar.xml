<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_height="50dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/celesteItem">

            <TextView
                android:id="@+id/dateCalendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/francois_one"
                android:gravity="start|center"
                android:paddingStart="15dp"
                android:textColor="@color/dirtywhite"
                android:letterSpacing="0.15"
                android:text="26/10/2023"
                android:textSize="16sp"
                android:textStyle="bold" />

<!--            <TextView-->
<!--                android:id="@+id/calendarMedName"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="2"-->
<!--                android:fontFamily="@font/francois_one"-->
<!--                android:gravity="start|center"-->
<!--                android:letterSpacing="0.15"-->
<!--                android:text="Ibuprofeno"-->
<!--                android:textSize="16sp"-->
<!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/detailsCalendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:clickable="true"
                android:fontFamily="@font/francois_one"
                android:gravity="start|center"
                android:onClick="onTextViewClick"
                android:text="@string/see_all"
                android:textSize="18sp"
                android:textColor="@color/dirtygrey"
                android:letterSpacing="0.05"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyStatusBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:clickable="true"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:text="@string/detalle"
                android:textSize="18sp"
                android:textColor="@color/dirtygrey"
                android:letterSpacing="0.05"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
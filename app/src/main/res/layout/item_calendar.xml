<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_height="50dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/celesteItem">

            <TextView
                android:id="@+id/dateCalendar"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/francois_one"
                android:gravity="start|center"
                android:letterSpacing="0.15"
                android:paddingStart="15dp"
                android:text="26/10/2023"
                android:textColor="@color/dirtyWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--            <TextView-->
            <!--                android:id="@+id/calendarMedName"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="2"-->
            <!--                android:fontFamily="@font/francois_one"-->
            <!--                android:gravity="start|center"-->
            <!--                android:letterSpacing="0.15"-->
            <!--                android:text="Ibuprofeno"-->
            <!--                android:textSize="16sp"-->
            <!--                android:textStyle="bold" />-->

            <TextView
                android:id="@+id/detailsCalendar"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:clickable="true"
                android:fontFamily="@font/francois_one"
                android:gravity="start|center"
                android:letterSpacing="0.05"
                android:onClick="onTextViewClick"
                android:paddingEnd="28dp"
                android:text="@string/see_details"
                android:textColor="@color/dirtyGrey"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dailyStatusBtn"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1.2"
                android:clickable="true"
                android:fontFamily="@font/francois_one"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:text="@string/see_details"
                android:textColor="@color/dirtyGrey"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
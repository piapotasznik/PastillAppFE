<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_height="50dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/historical">

            <TextView
                android:id="@+id/medNameHistorical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/francois_one"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Paracetamol" />

            <TextView
                android:id="@+id/initialDate"
                android:layout_width="0dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/francois_one"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="23-05-23"/>
<!--            <TextView-->
<!--                android:id="@+id/medPresentationHistorical"-->
<!--                android:layout_width="0dp"-->
<!--                android:gravity="center"-->
<!--                android:textStyle="bold"-->
<!--                android:fontFamily="@font/francois_one"-->
<!--                android:layout_weight="2"-->
<!--                android:layout_height="match_parent"-->
<!--                android:text="comprimidos"/>-->

            <ImageView
                android:id="@+id/editHistorical"
                android:layout_width="0dp"
                android:gravity="center"
                android:textStyle="bold"
                android:src="@drawable/ic_edit_black"
                android:layout_weight="1.2"
                android:adjustViewBounds="false"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/seeHistorical"
                android:layout_width="0dp"
                android:gravity="center"
                android:textStyle="bold"
                android:src="@drawable/ic_archived_black"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/deleteHistorical"
                android:layout_width="0dp"
                android:gravity="center"
                android:textStyle="bold"
                android:src="@drawable/ic_cross_black"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                />



        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
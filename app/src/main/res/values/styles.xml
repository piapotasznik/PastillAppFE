<resources>

    <style name="GrayText">
        <item name="android:textColor">#80CCCCCC</item>

    </style>

    <style name="SelectedNavItem">
        <item name="android:textColor">@color/white</item> <!-- Cambia el color del texto -->
        <item name="android:background">@color/white</item> <!-- Cambia el color de fondo -->
        <!-- Otros atributos de estilo que quieras modificar -->
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginHorizontal">50sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:contentInsetStart">0dp</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyTimePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <!-- Puedes personalizar otros atributos aquÃ­ si lo deseas -->
    </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:textColor">@color/grey</item>

    </style>

    <style name="TimePicker" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:windowBackground">@drawable/custom_rectangle</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialog</item>
    </style>

    <style name="MyDatePickerDialog" parent="@style/ThemeOverlay.AppCompat.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.DatePicker">
        <!-- Cambiar el color del fondo -->
        <item name="android:background">@color/celeste</item>

        <!-- Cambiar el color del texto -->
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>
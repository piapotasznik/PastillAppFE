<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PastillApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        // <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--        <item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/pink</item>
        <item name="android:fontFamily">@font/francois_one</item>

    </style>

    <style name="Theme.PastillApp" parent="Base.Theme.PastillApp" />

    <style name="Theme.PastillApp.Picker" parent="Base.Theme.PastillApp">
        <item name="android:textColorPrimary">@color/grey</item>
    </style>

    <style name="Theme.PastillApp.Spinner" parent="Base.Theme.PastillApp">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.PastillApp.ButtonCxl" parent="Base.Theme.PastillApp">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="backgroundTint">@color/pink</item>
        <item name="android:radius">15dp</item>
    </style>

    <style name="Theme.PastillApp.ButtonSave" parent="Base.Theme.PastillApp">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="background">@drawable/round_button</item>
    </style>

    <style name="Theme.PastillApp.ButtonEmergency" parent="Base.Theme.PastillApp">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="backgroundTint">@color/red</item>
        <item name="background">@drawable/round_button</item>
    </style>

    <style name="Theme.PastillApp.ButtonReminders" parent="Base.Theme.PastillApp">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="background">@drawable/round_button</item>
    </style>

    <style name="Theme.PastillApp.ButtonHistorical" parent="Base.Theme.PastillApp">
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="background">@drawable/round_button</item>
    </style>
</resources>